<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/skybtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skylab Plan" />

        <Switch
            android:id="@+id/skyswitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play/Pause SkyLab"
            android:textOff="Pause"
            android:textOn="Play " />

        <Button
            android:id="@+id/repsky"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Repeat Skylab" />

        <Button
            android:id="@+id/pembtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daniel Pemberton - Remember" />

        <Switch
            android:id="@+id/pemswitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play/Pause Remember"
            android:textOff="Pause"
            android:textOn="Play " />

        <Button
            android:id="@+id/reprem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Repeat Remember" />

        <Button
            android:id="@+id/dreambtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DreamWalker JT Peterson" />

        <Switch
            android:id="@+id/dreamswitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play/Pause DreamWalker"
            android:textOff="Pause"
            android:textOn="Play " />

        <Button
            android:id="@+id/dreamrep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Repeat DreamWalker" />

        <Button
            android:id="@+id/exitbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exit" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>